<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <EditText
        android:id="@+id/english_activity_addword_edittext_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:inputType="text"
        android:hint="输入单词"/>

    <Button
        android:id="@+id/english_activity_addword_button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/english_activity_addword_textview_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/english_activity_addword_textview_phonogram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/english_activity_addword_textview_annotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>


    <Button
        android:id="@+id/english_activity_addword_button_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置"
        android:layout_marginTop="32dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/english_activity_addword_button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</LinearLayout>